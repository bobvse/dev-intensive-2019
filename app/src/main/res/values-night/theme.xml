<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_appbar_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_divider_light</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <item name="colorTextLabel">@android:color/white</item>
        <item name="colorTextMessage">@color/color_gray</item>
        <item name="colorListItem">@color/color_list_item_night</item>
        <item name="colorSwipeBackground">@color/color_accent_night</item>

        <item name="colorItemSelected">@color/color_divider_dark</item>
        <item name="colorItemCleared">@color/color_list_item_night</item>

        <item name="colorUserSelected">@color/color_accent_night</item>
        <item name="colorIndicator">@color/color_accent_night</item>

        <item name="colorTime">@color/color_gray</item>
        <item name="colorCounterBackground">@color/color_gray_dark</item>

        <item name="colorArchiveBackground">@color/color_gray_dark</item>
        <item name="colorChipBackground">@android:color/black</item>
        <item name="colorChip">@color/color_list_item_night</item>

        <item name="colorSnackBarBackground">@android:color/white</item>
        <item name="colorSnackBarText">@android:color/black</item>

    </style>
